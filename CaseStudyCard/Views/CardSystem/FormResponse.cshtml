@model CaseStudyCard.Models.ApplicationResult

<div style="width=70%;padding-top:50px">
    @if (Model.Cards.Count > 0)
    {
    <table>
        @for (int i = 0; i < Model.Cards.Count; i++)
        {
            <tr>
                <th>Card Name</th>
                <th>APR</th>
                <th>Promo Message</th>
            </tr>
            <tr>
                <td><img src="@Url.Content(Model.Cards[i].ImageURL)" width="171" height="108" /></td>
                <td>@Model.Cards[i].CardName</td>
                <td>@Model.Cards[i].APR.ToString()</td>
                <td>@Model.Cards[i].PromotionalMessage</td>
            </tr>
        }
    </table>
    } else { 
        <h2>Sorry, there no credit cards available for you!</h2>
    }
</div>
